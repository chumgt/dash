math ::= import("dash:math")
io ::= import("dash:io")

export stop ::= native.stop

export fn range(start, stop, step = 1) {
  if step == 0 
    throw "step cannot be 0";
  if !math.is_finite(step)
    throw "step must be finite";

  stepSign ::= math.sign(step)
  i := start

  fn () {
    switch {
      stepSign != math.sign(stop - i) => stop
      else => {
        j ::= i
        i = i + step
        j
      }
    }
  }
}
