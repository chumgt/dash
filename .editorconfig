# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Dash scripts are read as UTF-8.
# Avoid automatic formatting as we may want to test the parser.
[**/*.dash]
charset = utf-8
insert_final_newline = false
trim_trailing_whitespace = false
