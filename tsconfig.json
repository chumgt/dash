{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",

    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,

    // "strict": true,
    "strictNullChecks": true,
    "noImplicitOverride": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.json",
    "./src/**/*.ts"
  ]
}
